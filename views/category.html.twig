{% block content %}
        {% for vinyl in vinyls %}
            <div class="col-md-3 col-sm-4 col-xs-12">
                <a href="{{ path('vinyl', { 'id': vinyl.id }) }}"> 
                    <img src="{{ vinyl.sleeve }}" class="img-circle img-vinyl" height="150" width="150" data-toggle="tooltip" data-placement="bottom" title="{{ vinyl.title }}">
                </a>
            </div>
        {% else %}
            <h2>Pas de vinyls dans cette cat√©gorie pour le moment !</h2>
        {% endfor %}
{% endblock %}
{% extends "layout.html.twig" %}
{% set adminMenu = true %}

{% block titleH1 %}Administration{% endblock %}


{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}
<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href="#Vinyls" data-toggle="tab">Vinyls</a></li>
            <li><a href="#categories" data-toggle="tab">Categories</a></li>
            <li><a href="#users" data-toggle="tab">Utilisateurs</a></li>
        </ul>
    </div>
</div>
<div class="tab-content">
    <div class="tab-pane fade in active adminTable" id="Vinyls">
        {% if vinyls %}
        <div class="table-hover">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th class="hidden-xs">Catégorie</th>
                        <th class="hidden-xs">Prix</th>
                    </tr>
                </thead>
                {% for vinyl in vinyls %}
                <tr>
                    <td><a class="vinyltitle" href="{{ path('vinyl', { 'id': vinyl.id }) }}">{{ vinyl.title }}</a></td>
                    <td class="hidden-xs">{{ vinyl.category.title }}</td>
                    <td class="hidden-xs">{{ vinyl.price }} € </td>
                    <td>
                        <a href="{{ path('profil', { 'id': vinyl.id }) }}" class="btn btn-info btn-xs" title="Edit">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#articleDialog{{ vinyl.id }}">
                            <span class="glyphicon glyphicon-remove"></span>
                        </button>
                        <div class="modal fade" id="articleDialog{{ vinyl.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                    </div>
                                    <div class="modal-body">
                                        Do you really want to delete this vinyl ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        <a href="{{ path('profil', { 'id': vinyl.id }) }}" class="btn btn-danger">Confirm</a>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning">No vinyl found.</div>
        {% endif %}
        <a href="#"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add Vinyl</button></a>
    </div>
    
    <div class="tab-pane fade adminTable" id="categories">
        {% if categories %}
            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th></th>  <!-- Actions column -->
                        </tr>
                    </thead>
                    {% for category in categories %}
                    <tr>
                        <td>{{ category.title }}</a></td>
                        <td>
                            <a href="{{ path('category', { 'id': category.id }) }}" class="btn btn-info btn-xs" title="Edit">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            
                            <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#userDialog{{ category.id }}">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                            
                            <div class="modal fade" id="userDialog{{ category.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                        </div>
                                        <div class="modal-body">
                                            Do you really want to delete this category ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            <a href="{{ path('category', { 'id': category.id }) }}" class="btn btn-danger">Confirm</a>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->
                        </td>
                    </tr>
                    {% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning">No category found.</div>
        {% endif %}
        <a href="#"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add category</button></a></div>

    <div class="tab-pane fade adminTable" id="users">
           {% if users %}
            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Role</th>
                            <th></th>  <!-- Actions column -->
                        </tr>
                    </thead>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</a></td>
                        <td>
                            {% if user.role == 'ROLE_ADMIN' %}
                                Admin
                            {% else %}
                                User
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('vinyl', { 'id': user.id }) }}" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                            <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#userDialog{{ user.id }}"><span class="glyphicon glyphicon-remove"></span>
                            </button>
                            <div class="modal fade" id="userDialog{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                        </div>
                                        <div class="modal-body">
                                            Do you really want to delete this user ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            <a href="{{ path('vinyl', { 'id': user.id }) }}" class="btn btn-danger">Confirm</a>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            {% else %}
            <div class="alert alert-warning">No users found.</div>
            {% endif %}
        <a href="{{ path('home') }}"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add user</button></a>
    </div>
</div>
{% endblock %}

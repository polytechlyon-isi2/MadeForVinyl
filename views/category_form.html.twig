{% extends 'layout.html.twig' %}

{% block title %} {{ title }} {% endblock %}
{% block titleH1 %} {{ title }} {% endblock %}

{% block content %}


{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
    <META HTTP-EQUIV="Refresh" CONTENT="1;URL= {{ path('admin') }}">
</div>
{% endfor %}


{{ form_start(categoryForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        {{ form_label(categoryForm.title, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(categoryForm.title) }}
            {{ form_widget(categoryForm.title, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-primary" value="Enregistrer" />
        </div>
{{ form_end(categoryForm) }}
</div>
{% endblock %}
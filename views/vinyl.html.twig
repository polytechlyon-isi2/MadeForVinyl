{% extends "layout.html.twig" %}

{% block title %}{{ vinyl.title }}{% endblock %}

{% block titleH1 %}
{{ vinyl.title }}
{% endblock %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<div class="row">
    <div class="col-md-4 col-sm-6 col-xs-12">
        <img src="{{ vinyl.sleeve }}" class="img-thumbnail">
    </div>
    <div class="col-md-8 col-sm-6 col-xs-12">
        <h2> informations :</h2>
        <div class="">
            <table class="table table-hover">
                <tbody>
                  <tr>
                    <td>Titre :</td>
                    <td>{{ vinyl.title }}</td>
                  </tr>
                  <tr>
                    <td>Artiste :</td>
                    <td>{{ vinyl.artist }}</td>
                  </tr>
                  <tr>
                    <td>Année :</td>
                    <td>{{ vinyl.year }}</td>
                  </tr>
                    <tr>
                    <td>Catégorie :</td>
                    <td>{{ vinyl.category.title }}</td>
                  </tr>
                    <tr>
                    <td>Prix :</td>
                    <td>{{ vinyl.price }} €</td>
                  </tr>
                </tbody>
            </table>
            {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
            <a type="submit" class="btn btn-warning" href="{{ path('ajoutPanier', {'id': vinyl.id}) }}"> Ajouter au panier</a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
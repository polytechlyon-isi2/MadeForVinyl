{% extends "layout.html.twig" %}

{% block title %}Mon Panier{% endblock %}

{% block titleH1 %}
Mon Panier
{% endblock %}

{% block content %}  
{% if baskets %}
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Article</th>
        <th>Prix unitaire</th>
        <th>Quantité</th>
        <th>Prix Total TTC</th>
      </tr>
    </thead>
    <tbody>
        {% for basket in baskets %} 
      <tr>
        <td>{{ basket.vinyl.title }}</td>
        <td>{{ basket.vinyl.price }} €</td>
        <td>{{ basket.quantity }}</td>
        <td>{{ basket.vinyl.price * basket.quantity }} €</td>
      </tr>
        {% endfor %}
    </tbody>
  </table>
{% else %}
            <h2>Vous n'avez rien dans votre panier! Continuez vos achats... </h2>
{% endif %}
{% endblock %}